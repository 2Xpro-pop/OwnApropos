<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:OwnApropos.ViewModels"
             xmlns:sk="using:Avalonia.Svg.Skia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OwnApropos.Views.NavButtonView"
             x:DataType="vm:NavButtonViewModel">
  <Design.DataContext>
    <vm:NavButtonViewModel/>
  </Design.DataContext>
  <Button x:Name="button" Classes="box">
    <Panel>
      <Panel>
        <Image x:Name="image"/>
      </Panel>
      <TextBlock x:Name="text" Classes="h1"  VerticalAlignment="Bottom"/>
    </Panel>
  </Button>
</UserControl>
